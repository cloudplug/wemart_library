<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/wemart_ac_head" />

    <ScrollView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:background="@drawable/wemart_order_line" />

            <RelativeLayout
                android:id="@+id/wemart_tdizi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wemart_order_adress_coordinate" />

                <TextView
                    android:id="@+id/tv_wemart_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="事实上"
                    android:textColor="#242424"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_wemart_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:text="1383833543538"
                    android:textColor="#242424"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/wemart_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/wemart_order_right" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_wemart_name"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_wemart_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:text="上海市上海市上海市上海市上海市上海市上海市上海市上海市上海市"
                        android:textColor="#242424"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:background="@drawable/wemart_order_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#eeeeee" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#e0e0e0" />

            <cn.wemart.widget.ListViewForScrollView
                android:id="@+id/lv_wemart_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/wemart_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

                

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="支付方式"
                        android:textColor="#242424"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:id="@+id/rl_wemart_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/wemart_iv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/wemart_img_alipay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/wemart_iv3"
                        android:text="支付宝钱包(推荐)"
                        android:textColor="#242424"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/img_wemart_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/wemart_order_nopay" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:id="@+id/rl_wemart_wechat"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/wemart_iv4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/wemart_img_weixing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/wemart_iv4"
                        android:text="微信支付"
                        android:textColor="#242424"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/img_wemart_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/wemart_order_nopay" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#e0e0e0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#e0e0e0" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_wemart_pay"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/wemart_button_order_pay"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_wemart_orderprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/tv_wemart_pay"
            android:text="0"
            android:textColor="#ff0000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wemart_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/tv_wemart_orderprice"
            android:text="¥"
            android:textColor="#ff0000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_wemart_orderprice"
            android:text="应支付:"
            android:textColor="#242424"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>