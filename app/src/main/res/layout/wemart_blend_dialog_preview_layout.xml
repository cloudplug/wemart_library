<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wemart_blend_dialog_frame"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/wemart_blend_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:padding="16dp"
        android:text="标题内容"
        android:textColor="#ff393d43"
        android:textSize="20sp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ff005092" />

    <LinearLayout
        android:id="@+id/wemart_blend_dialog_preview"
        android:layout_width="match_parent"
        android:layout_height="242dip"
        android:background="@null"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/wemart_blend_holo_progressbar_circle" />
    </LinearLayout>

    <ListView
        android:id="@+id/wemart_blend_dialog_nextview"
        android:layout_width="match_parent"
        android:layout_height="242dip"
        android:cacheColorHint="#0000"
        android:divider="#ffededed"
        android:dividerHeight="0.5dip"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent"
        android:visibility="gone" />

    <View
        android:id="@+id/wemart_blend_dialog_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffededed" />

    <TextView
        android:id="@+id/wemart_blend_dialog_cancle_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/wemart_blend_view_bg_default"
        android:gravity="center"
        android:text="是"
        android:textColor="#696969"
        android:textSize="16.0dip" />

</LinearLayout>